<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">



    <TextView
            android:text="@string/mensagem_inicial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"/>
    <EditText
            android:background="@drawable/reg_edittext_style"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Entre com o usuário"
            android:ems="10"
            android:id="@+id/campo_usuario"/>
    <EditText
            android:background="@drawable/reg_edittext_style"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Entre com a senha"
            android:ems="10"
            android:id="@+id/campo_senha_login"/>
    <CheckBox android:hint="Lembrar de mim"
              android:id="@+id/campo_check_box"
              android:layout_width="100dp"
              android:layout_height="100dp"/>

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content">
        <Button
                android:background="@drawable/reg_btn_style"
                android:text="Login"
                android:stateListAnimator="@null"
                android:layout_width="357dp"
                android:layout_height="wrap_content"
                android:id="@+id/botao_login"/>
        <ProgressBar android:layout_width="437dp"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_horizontal|center_vertical"
                     android:visibility="invisible"
                     android:onClick="botao_login"
                     style="?android:attr/progressBarStyle"
                     android:id="@+id/progressBar"/>

    </FrameLayout>
    <Button
            android:background="@drawable/reg_btn_style"
            android:text="Caso não tenha uma conta click aqui"
            android:layout_width="357dp"
            android:layout_height="wrap_content" android:id="@+id/botao_cadastrar"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/lms_app"
            android:id="@+id/lms_app"/>
</LinearLayout>

