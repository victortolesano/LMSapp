<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#ffffff"
             android:id="@+id/Frame_layout_principal">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <Button
                android:text="camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button_camera"/>
        <Button
                android:text="galeria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button_galery"/>
        <ImageView

                android:layout_width="204dp"
                android:layout_height="wrap_content" app:srcCompat="@drawable/userphoto" android:id="@+id/cad_img"/>
        <EditText
                android:background="@drawable/reg_edittext_style"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Digite o seu Nome"
                android:ems="10"
                android:id="@+id/cad_nome"/>
        <EditText
                android:background="@drawable/reg_edittext_style"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:ems="10"
                android:id="@+id/cad_campo_Email"/>
        <EditText
                android:background="@drawable/reg_edittext_style"
                android:layout_width="265dp"
                android:layout_height="wrap_content"


                android:inputType="textPostalAddress"
                android:hint="endereÃ§o"
                android:ems="10"
                android:id="@+id/cad_campo_endereco"/>
        <EditText
                android:background="@drawable/reg_edittext_style"
                android:layout_width="265dp"
                android:layout_height="wrap_content"

                android:inputType="number"
                android:hint="CPF"
                android:ems="10"

                android:id="@+id/campo_cpf"/>

                android:id="@+id/cad_campo_numero" android:hint="Numero residencia "/>

        <EditText
                android:background="@drawable/reg_edittext_style"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Digite uma Senha"
                android:ems="10"
                android:id="@+id/cad_campo_senha"/>
        <Button
                android:background="@drawable/reg_btn_style"
                android:text="Cadastrar"
                android:layout_width="357dp"
                android:layout_height="wrap_content"
                android:onClick="enviarCadastro"
                android:id="@+id/cad_botao_enviar_cadastro"/>
    </LinearLayout>

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:id="@+id/frame_layout_cadastrar"
                 android:visibility="gone">

        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:id="@+id/progressBar2"/>
    </FrameLayout>

</FrameLayout>
